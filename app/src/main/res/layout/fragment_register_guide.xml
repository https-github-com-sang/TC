<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp">

            <TextView
                style="@style/Info_Title"
                android:background="@drawable/bg_green_border_gray_filled_rounded_corner"
                android:text="@string/label_register_guide"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_guide_type"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_register_guide_type"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_city"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_living_city"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_driving_licence"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_driving_licence"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_country"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_airline"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_know_destination"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_known_destinations"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_fluent"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_fluent_language"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_free_time"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_available_time"/>

            <sang.thai.tran.travelcompanion.view.EditTextViewLayout
                android:id="@+id/et_register_place"
                style="@style/Info_Input"
                android:layout_marginTop="@dimen/_5sdp"
                custom:isGreen="true"
                custom:text="@string/label_registration_place_to_guide"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_border_white_filled_rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="@string/label_upload_id_card"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/_11sdp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_border_white_filled_rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="@string/label_upload_passport"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/_11sdp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_border_white_filled_rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="@string/label_driving_licence"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/_11sdp"/>
            </LinearLayout>

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_login_shape"
                android:text="@string/label_register"
                android:textColor="@color/color_text_white"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>